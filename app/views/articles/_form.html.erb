<%= render 'shared/errors', obj: @article%>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => { class: "form-horizontal", role: "form" }, local: true) do |form| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :title %><br>
        </div>
        <div class="col-sm-10">
          <%= form.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class="form-gourp">
        <div class="control-label col-sm-2">
          <%= form.label :description %><br>
        </div>
        <div class="col-sm-10">
          <%= form.text_area :description, class: "form-control", placeholder: "Body of article", rows: 10 %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
